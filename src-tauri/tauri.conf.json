{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "OnlyGroceries",
  "version": "0.1.0",
  "identifier": "coop.nonscalable.onlygroceries",
  "build": {
    "frontendDist": "../web/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm -F web dev",
    "beforeBuildCommand": "pnpm -F web build"
  },
  "app": {
    "windows": [
      {
        "title": "OnlyGroceries",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
